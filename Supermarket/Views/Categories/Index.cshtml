@{
    ViewData["Title"] = "Categories"; // This is the text in the tab bar
}
@model List<Supermarket.Models.Category>

@section Title{
    <h3> Categories </h3>
}

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>c
                    <td>@category.Description</td>
                    <td>
                        <a class="btn btn-primary" href="@Url.Action("Edit", "Categories", new { id = category.Id })">Edit</a>
                        <a class="btn btn-primary" href="@Url.Action("Delete", "Categories", new { id = category.Id })" onclick="return confirmDelete()">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-primary" href="@Url.Action("Add", "Categories")"> Add </a>
}
else
{
    <p>No categories available.</p>
}

@section Scripts{
    <script>
        function confirmDelete(){
            return confirm("Are you sure you want to delete this category?");
        }
    </script>
}